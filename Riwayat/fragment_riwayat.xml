<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Fragment.RiwayatFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:textSize="18sp"
            android:textColor="@color/black_87"
            android:text="Riwayat"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/border"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/iv_menunggu_pembayaran"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/ic_menunggu_pembayaran"
            android:backgroundTint="@drawable/card_selected"/>

        <ImageView
            android:id="@+id/iv_diproses"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/ic_diproses"
            android:backgroundTint="@drawable/card_selected"/>

        <ImageView
            android:id="@+id/iv_dikirim"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/ic_dikirim"
            android:backgroundTint="@drawable/card_selected"/>

        <ImageView
            android:id="@+id/iv_sampai_tujuan"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/ic_sampai_tujuan"
            android:backgroundTint="@drawable/card_selected"/>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/screen_riwayat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>