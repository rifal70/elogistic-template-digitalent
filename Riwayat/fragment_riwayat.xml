<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Fragment.RiwayatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/border"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:id="@+id/ll_riwayat_waiting"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_waiting_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_horizontal"
                android:text="Menunggu Pembayaran"
                android:textAlignment="center"
                android:textSize="8sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_riwayat_process"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_process" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/inter_regular"
                android:text="Diproses"
                android:textAlignment="center"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_riwayat_sending"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_sending" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/inter_regular"
                android:text="Dikirim"
                android:textAlignment="center"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_riwayat_arrived"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_arrived" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/inter_regular"
                android:text="Sampai Tujuan"
                android:textAlignment="center"
                android:textSize="8sp" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Hari ini"
        android:textColor="@color/black_87"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_marginTop="8dp"
        android:id="@+id/screen_riwayat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>