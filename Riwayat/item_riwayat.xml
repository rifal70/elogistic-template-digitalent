<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp">

        <RelativeLayout
            android:id="@+id/rl_status_riwayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_status_riwayat"
            android:backgroundTint="@color/orange_secondary"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Belum Bayar"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nomor_pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter_regular"
            android:maxWidth="232dp"
            android:text="4gajreuh123"
            android:textColor="@color/black_54"
            android:textSize="8sp" />

        <LinearLayout
            android:id="@+id/ll_tujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nomor_pesanan"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Pelabuhan Sunda Kelapa"
                android:textColor="@color/black_87"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/ic_arrow_right"
                android:backgroundTint="@color/black_54" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Bangkaheuni"
                android:textColor="@color/black_87"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_riwayat_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_tujuan"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_regular"
            android:text="09/03/2021 13:00"
            android:textColor="@color/black_54"
            android:textSize="12sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>