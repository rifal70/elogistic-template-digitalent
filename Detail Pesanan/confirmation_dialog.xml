<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:orientation="vertical"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:textSize="18sp"
            android:textColor="@color/black_87"
            android:text="Cek tarif pengiriman"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/iv_close_dialog"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_close"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/black_87"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:textSize="14sp"
                android:textColor="@color/black_87"
                android:text="Pelabuhan Merak"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/ic_arrow_right"
                android:backgroundTint="@color/black_54"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:textSize="14sp"
                android:textColor="@color/black_87"
                android:text="Kalimas"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:text="estimasi biaya:"
            android:textColor="@color/black_54"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:textSize="14sp"
            android:textColor="@color/black_87"
            android:text="@string/full_container"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:textSize="14sp"
            android:textColor="@color/black_87"
            android:text="@string/less_container"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginTop="28dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kembali"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:textAllCaps="false"
            android:text="Kembali"
            android:fontFamily="@font/inter_bold"
            android:textSize="12sp"
            android:textColor="@drawable/button_outline_text_color"
            android:background="@drawable/button_outline"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="108dp"
            android:layout_height="28dp"
            android:fontFamily="@font/inter_bold"
            android:textSize="12sp"
            android:textColor="@drawable/button_filled_text_color"
            android:background="@drawable/button_filled"
            android:text="Pesan Sekarang"
            android:textAllCaps="false"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>


</LinearLayout>